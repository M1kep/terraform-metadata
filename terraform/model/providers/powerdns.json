{
  ".schema_version": "1",
  "name": "powerdns",
  "type": "provider",
  "version": "v0.2.0",
  "provider": {
    "api_key": {
      "Type": "String",
      "Required": true,
      "Description": "REST API authentication key",
      "DefaultFunc": "ENV(PDNS_API_KEY)"
    },
    "server_url": {
      "Type": "String",
      "Required": true,
      "Description": "Location of PowerDNS server",
      "DefaultFunc": "ENV(PDNS_SERVER_URL)"
    }
  },
  "resources": {
    "powerdns_record": {
      "name": {
        "Type": "String",
        "Required": true
      },
      "records": {
        "Type": "Set",
        "Required": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "set_ptr": {
        "Type": "Bool",
        "Optional": true,
        "Description": "For A and AAAA records, if true, create corresponding PTR."
      },
      "ttl": {
        "Type": "Int",
        "Required": true
      },
      "type": {
        "Type": "String",
        "Required": true
      },
      "zone": {
        "Type": "String",
        "Required": true
      }
    },
    "powerdns_zone": {
      "kind": {
        "Type": "String",
        "Required": true
      },
      "name": {
        "Type": "String",
        "Required": true
      },
      "nameservers": {
        "Type": "Set",
        "Required": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      }
    }
  },
  "data-sources": {}
}